<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detaylar">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="281dp"
        android:layout_height="172dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/nameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="324dp"
        android:layout_height="59dp"
        android:layout_marginBottom="20dp"
        android:text="Name:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/cityText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.747"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/cityText"
        android:layout_width="292dp"
        android:layout_height="64dp"
        android:layout_marginBottom="38dp"
        android:text="City:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textPoint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />

    <TextView
        android:id="@+id/textPoint"
        android:layout_width="126dp"
        android:layout_height="137dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="28dp"
        android:text="Puan:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textSıralama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityText" />

    <TextView
        android:id="@+id/textSıralama"
        android:layout_width="134dp"
        android:layout_height="138dp"
        android:layout_marginEnd="56dp"
        android:text="Sıralama:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textPoint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textPoint"
        app:layout_constraintTop_toTopOf="@+id/textPoint"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>